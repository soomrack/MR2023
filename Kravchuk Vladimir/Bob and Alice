#include <stdio.h>

long long int alice_bank_account = 1000000 * 100,
bob_bank_account = 0,
alice_salary = 200000 * 100,
bob_salary = 200000 * 100,
spend_for_rent_alice = 35000 * 100,
spending_alice = 20000 * 100,
spending_bob = 18000 * 100,
spend_for_hamster = 4000 * 100,
alice_bank_accont = 1000000 * 100,
bob_bank_accont = 0;
int percent_deposite = 9,
home_cost = 20000000 * 100;


void alice_salary_income( int year, int month)
{
	alice_bank_account += alice_salary;
	if (year == 2029 && month == 2) alice_salary = 0;
	if (year == 2029 && month == 3) alice_salary = 200000 * 100;
}

void bob_salary_income( int year, int month)
{
	bob_bank_account += bob_salary;
	if (year == 2029 && month == 2) bob_salary = 0;
	if (year == 2029 && month == 3) bob_salary = 200000 * 100;
}

void alice_deposite_income( int year, int month)
{
	alice_bank_account += alice_bank_account * (percent_deposite / (100 * 12));
}

void bob_deposite_income( int year, int month)
{
	int bob_loan_payment = 110000 * 100;
	bob_bank_account -= bob_loan_payment;
	bob_bank_account += bob_bank_account * (percent_deposite / (100 * 12));
}

void inflation_all( int year, int month)
{
	int inflation = 3;
	if (month == 12) {
		alice_salary += alice_salary * (inflation / 100);
		bob_salary += bob_salary * (inflation / 100);
		spend_for_rent_alice+= spend_for_rent_alice*(inflation/(3*100));
		spending_alice += spending_alice * (inflation / (3 * 100));
		spending_bob += spending_bob * (inflation / (3 * 100));
		spend_for_hamster += spend_for_hamster * (inflation / 100);
		home_cost += home_cost * (inflation / (3 * 100));
	}
	if (year == 2036 && month == 11) percent_deposite += percent_deposite + 2;
}


void alice_rent_home( int year, int month)
{
	alice_bank_account -= spend_for_rent_alice;
}

void alice_buying_home(int year, int month)
{
	int home = 0;
	if (alice_bank_account > home_cost && home == 0) {
		alice_bank_account -= home_cost;
		home++;
	}
}

void alice_month_spending( int year, int month)
{
	alice_bank_accont -= spending_alice;
	if (year == 2031 && month == 3) spending_alice += spending_alice / 2;
}

void bob_month_spending( int year, int month)
{
	bob_bank_accont -= spending_bob;
	if (year == 2035 && month == 4) spending_bob += 3*spending_bob / 4;
}


void alice_trip( int year, int month)
{
	if (year == 2035 && month == 6) alice_bank_account -= 100000 * 100;
	if(year == 2045 && month == 8) alice_bank_account -= 150000 * 100;
}

void bob_trip( int year, int month)
{
	if (year == 2030 && month == 6) bob_bank_account -= 120000 * 100;
	if (year == 2037 && month == 8) bob_bank_account -= 110000 * 100;
}

void alice_hamster( int year, int month)
{
	alice_bank_account -= spend_for_hamster;
}

void information_alice()
{
	printf("Alice bank account = %lld\n", alice_bank_account/100);
}

void information_bob()
{
	printf("Bob bank account = %lld\n", bob_bank_account/100);
}

void simulation()
{
	int month = 9;
	int year = 2023;
	while (year != 2053 || (year < 2053 && month == 9)) {
		alice_deposite_income(year, month);
		alice_salary_income(year, month);
		alice_rent_home(year, month);
		alice_month_spending(year, month);
		alice_trip(year, month);
		alice_hamster(year, month);
		bob_deposite_income(year, month);
		bob_salary_income(year, month);
		bob_month_spending(year, month);
		bob_trip(year, month);
		inflation_all(year, month);
		alice_buying_home(year, month);
		
		// FOR DEBUG
		//information_alice();
		//information_bob();

		month++;
		if (month == 12) {
			year++;
			month = 1;
		}
	}
}

int main(void)
{
	simulation();
	information_alice();
	information_bob();
	return 0;
}
